<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:padding="@dimen/msgitem_myself_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/message_content_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/text_view_border"
            android:clickable="false"
            android:focusable="true"
            android:lineSpacingExtra="@dimen/msgitem_receive_system_linespacing"
            android:paddingBottom="@dimen/msgitem_receive_system_paddingbottom"
            android:paddingLeft="@dimen/msgitem_receive_system_paddingleft"
            android:paddingRight="@dimen/msgitem_receive_system_paddingright"
            android:paddingTop="@dimen/msgitem_receive_system_paddingtop"
            android:text="收到红包，请在手机上查看"
            android:textColor="@color/receive_system_text_color"
            android:textSize="@dimen/msgitem_content_textsize"/>
    </LinearLayout>
</LinearLayout>